<Window x:Class="bSeamless.DotNetProg.XAML.PanelLayout.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CanvasWindow" Height="500" Width="500">
    <Canvas>

        <Rectangle Width="100"
                Height="100"
                Fill="Green" />

        <Rectangle 
            Canvas.Left="120.0"
                Width="100"
                Height="200"
                Fill="Blue" />

        <Rectangle Canvas.Left="120"
                Canvas.Top="100"
                Width="150"
                Height="150"
                Panel.ZIndex="4"
                Fill="Yellow" />


    </Canvas>
</Window>
