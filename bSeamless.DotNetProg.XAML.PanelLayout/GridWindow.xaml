<Window x:Class="bSeamless.DotNetProg.XAML.PanelLayout.GridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridWindow" Height="500" Width="500">
    <Grid ShowGridLines="True">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Button Content="A button" />

        <Button Grid.Row="1" Content="A button" Background="Green" />

        <Button Grid.Row="1"
                Grid.Column="1"
                Content="A button" Background="Yellow" Click="ButtonBase_OnClick" />

        <Button Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Content="A button" Background="Blue" />

    </Grid>
</Window>
