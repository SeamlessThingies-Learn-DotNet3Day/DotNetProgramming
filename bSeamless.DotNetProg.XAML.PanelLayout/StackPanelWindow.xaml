<Window x:Class="bSeamless.DotNetProg.XAML.PanelLayout.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StackPanelWindow" Height="500" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Background="Pink" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle 
                       Height="50"
                       Fill="Yellow"
                       HorizontalAlignment="Stretch"
                       />
            <Rectangle Width="50"
                       Height="50"
                       Fill="Green" />
            <Rectangle Width="250"
                       Height="150"
                       Fill="Blue" />
        </StackPanel>
    </Grid>
</Window>
