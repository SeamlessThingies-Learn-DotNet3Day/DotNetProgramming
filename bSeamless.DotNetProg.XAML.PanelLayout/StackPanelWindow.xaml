<Window x:Class="bSeamless.DotNetProg.XAML.PanelLayout.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StackPanelWindow" Height="500" Width="500">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Rectangle Width="50"
                       Height="50"
                       Fill="Yellow" />
            <Rectangle Width="50"
                       Height="50"
                       Fill="Green" />
            <Rectangle Width="50"
                       Height="50"
                       Fill="Blue" />
        </StackPanel>
    </Grid>
</Window>
