<Window x:Class="bSeamless.DotNetProg.XAML.ResourcesAndStyles.Intro2Resources.Intro2Resources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intro2Resources" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="brushKindaRed" Color="#FFFF1111" />
    </Window.Resources>
    <Grid>

        <StackPanel Orientation="Vertical">
            <TextBlock Foreground="{StaticResource brushKindaRed}" Text="First textblock" />
            <TextBlock Foreground="{StaticResource brushKindaRed}" Text="Second textblock" />
        </StackPanel>

    </Grid>
</Window>
