<Window x:Class="bSeamless.DotNetProg.XAML.ResourcesAndStyles.Intro2Resources.Intro2Resources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intro2Resources" Height="300" Width="300">
    <Window.Resources>
        <SolidColorBrush x:Key="brushKindaRed" Color="Blue" />
    </Window.Resources>
    <Grid>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="First textblock" Foreground="{StaticResource brushKindaRed}" />
            <TextBlock Text="Second textblock" 
                       Foreground="{StaticResource brushKindaRed}"
                       />
        </StackPanel>

    </Grid>
</Window>
